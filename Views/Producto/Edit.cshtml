@model Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container-fluid px-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-2 text-gray-800 fw-bold">
                <i class="bi bi-pencil-square me-2 text-warning"></i>Editar Producto
            </h1>
            <p class="text-muted">Actualiza la informaci√≥n del producto en tu inventario</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-arrow-left me-2"></i>Volver a la Lista
        </a>
    </div>

    <!-- Formulario -->
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-warning bg-gradient text-white py-3 rounded-top-3">
                    <h5 class="card-title mb-0 fw-semibold">
                        <i class="bi bi-box-seam me-2"></i>Editar Informaci√≥n del Producto
                    </h5>
                </div>
                
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Edit" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="Id" />
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <!-- Columna Izquierda -->
                            <div class="col-md-6">
                                <!-- C√≥digo del Producto -->
                                <div class="form-group mb-4">
                                    <label asp-for="Codigo" class="form-label fw-semibold text-dark mb-2">
                                        <i class="bi bi-upc-scan me-2 text-primary"></i>C√≥digo del Producto
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="bi bi-tag text-muted"></i>
                                        </span>
                                        <input asp-for="Codigo" 
                                               class="form-control border-start-0 ps-2" 
                                               placeholder="Ej: PROD-001"
                                               required />
                                    </div>
                                    <span asp-validation-for="Codigo" class="text-danger small mt-1 d-block"></span>
                                </div>

                                <!-- Nombre del Producto -->
                                <div class="form-group mb-4">
                                    <label asp-for="Nombre" class="form-label fw-semibold text-dark mb-2">
                                        <i class="bi bi-card-text me-2 text-primary"></i>Nombre del Producto
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="bi bi-box text-muted"></i>
                                        </span>
                                        <input asp-for="Nombre" 
                                               class="form-control border-start-0 ps-2" 
                                               placeholder="Ingresa el nombre del producto"
                                               required />
                                    </div>
                                    <span asp-validation-for="Nombre" class="text-danger small mt-1 d-block"></span>
                                </div>

                                <!-- Stock -->
                                <div class="form-group mb-4">
                                    <label asp-for="Stock" class="form-label fw-semibold text-dark mb-2">
                                        <i class="bi bi-boxes me-2 text-primary"></i>Stock Disponible
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="bi bi-123 text-muted"></i>
                                        </span>
                                        <input asp-for="Stock" 
                                               type="number"
                                               class="form-control border-start-0 ps-2" 
                                               placeholder="0"
                                               min="0"
                                               required />
                                    </div>
                                    <span asp-validation-for="Stock" class="text-danger small mt-1 d-block"></span>
                                    <small class="form-text text-muted">Cantidad actual en inventario</small>
                                </div>
                            </div>

                            <!-- Columna Derecha -->
                            <div class="col-md-6">
                                <!-- Precio de Compra -->
                                <div class="form-group mb-4">
                                    <label asp-for="PrecioCompra" class="form-label fw-semibold text-dark mb-2">
                                        <i class="bi bi-currency-dollar me-2 text-success"></i>Precio de Compra
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="bi bi-arrow-down-left text-muted"></i>
                                        </span>
                                        <input asp-for="PrecioCompra" 
                                               type="number"
                                               step="0.01"
                                               class="form-control border-start-0 ps-2" 
                                               placeholder="0.00"
                                               min="0"
                                               required />
                                        <span class="input-group-text bg-light border-start-0">$</span>
                                    </div>
                                    <span asp-validation-for="PrecioCompra" class="text-danger small mt-1 d-block"></span>
                                    <small class="form-text text-muted">Costo de importaci√≥n</small>
                                </div>

                                <!-- Precio de Venta -->
                                <div class="form-group mb-4">
                                    <label asp-for="PrecioVenta" class="form-label fw-semibold text-dark mb-2">
                                        <i class="bi bi-currency-dollar me-2 text-primary"></i>Precio de Venta
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="bi bi-arrow-up-right text-muted"></i>
                                        </span>
                                        <input asp-for="PrecioVenta" 
                                               type="number"
                                               step="0.01"
                                               class="form-control border-start-0 ps-2" 
                                               placeholder="0.00"
                                               min="0"
                                               required />
                                        <span class="input-group-text bg-light border-start-0">$</span>
                                    </div>
                                    <span asp-validation-for="PrecioVenta" class="text-danger small mt-1 d-block"></span>
                                    <small class="form-text text-muted">Precio al p√∫blico</small>
                                </div>

                                <!-- Imagen -->
                                <div class="form-group mb-4">
                                    <label asp-for="Imagen" class="form-label fw-semibold text-dark mb-2">
                                        <i class="bi bi-image me-2 text-primary"></i>URL de Imagen
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="bi bi-link text-muted"></i>
                                        </span>
                                        <input asp-for="Imagen" 
                                               type="url"
                                               class="form-control border-start-0 ps-2" 
                                               placeholder="https://ejemplo.com/imagen.jpg" />
                                    </div>
                                    <span asp-validation-for="Imagen" class="text-danger small mt-1 d-block"></span>
                                    <small class="form-text text-muted">Opcional - URL de la imagen del producto</small>
                                </div>

                                <!-- Informaci√≥n de solo lectura -->
                                <div class="alert alert-info bg-opacity-10 border-0 rounded-3 mt-3">
                                    <div class="small">
                                        <i class="bi bi-info-circle me-2"></i>
                                        <strong>Informaci√≥n del sistema:</strong><br>
                                        <span class="text-muted">ID: @Model.Id | Registrado: @Model.FechaRegistro.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Vista previa de imagen si existe -->
                        @if (!string.IsNullOrEmpty(Model.Imagen))
                        {
                            <div class="row mt-3">
                                <div class="col-12">
                                    <label class="form-label fw-semibold text-dark mb-2">
                                        <i class="bi bi-eye me-2"></i>Vista Previa de Imagen Actual
                                    </label>
                                    <div class="bg-light rounded-3 p-3 text-center">
                                        <img src="@Model.Imagen" 
                                             class="img-fluid rounded-2" 
                                             alt="Vista previa"
                                             style="max-height: 150px; object-fit: contain;"
                                             onerror="this.style.display='none'">
                                        <div class="mt-2">
                                            <small class="text-muted">Imagen actual del producto</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Calculadora de Ganancia (Visual) -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="alert alert-warning bg-opacity-10 border-0 rounded-3">
                                    <div class="row text-center">
                                        <div class="col-md-4">
                                            <small class="text-muted d-block">Ganancia por Unidad</small>
                                            <span class="h6 fw-bold text-success" id="gananciaUnidad">$0.00</span>
                                        </div>
                                        <div class="col-md-4">
                                            <small class="text-muted d-block">Margen de Ganancia</small>
                                            <span class="h6 fw-bold text-primary" id="margenGanancia">0%</span>
                                        </div>
                                        <div class="col-md-4">
                                            <small class="text-muted d-block">Estado</small>
                                            <span class="h6 fw-bold text-success" id="estadoPrecios">‚úì Precios OK</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Botones de Acci√≥n -->
                        <div class="form-group mt-4 pt-3 border-top">
                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                    <i class="bi bi-x-circle me-2"></i>Cancelar
                                </a>
                                <div class="d-flex gap-3">
                                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info btn-lg px-4">
                                        <i class="bi bi-eye me-2"></i>Ver Detalles
                                    </a>
                                    <button type="submit" class="btn btn-warning btn-lg px-5 fw-semibold">
                                        <i class="bi bi-check-circle me-2"></i>Guardar Cambios
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            backdrop-filter: blur(10px);
        }
        
        .form-control:focus {
            border-color: #ffc107;
            box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
        }
        
        .btn-warning {
            background: linear-gradient(135deg, #ffc107, #fd7e14);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }
        
        .btn-warning:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.4);
        }
        
        .input-group-text {
            background-color: #f8f9fa;
            border-color: #dee2e6;
        }
        
        .img-fluid {
            max-width: 100%;
            height: auto;
        }
    </style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Calculadora de ganancia en tiempo real
        function calcularGanancia() {
            const precioCompra = parseFloat(document.getElementById('PrecioCompra').value) || 0;
            const precioVenta = parseFloat(document.getElementById('PrecioVenta').value) || 0;
            
            const ganancia = precioVenta - precioCompra;
            const margen = precioCompra > 0 ? ((ganancia / precioCompra) * 100) : 0;
            
            // Actualizar display
            document.getElementById('gananciaUnidad').textContent = `$${ganancia.toFixed(2)}`;
            document.getElementById('margenGanancia').textContent = `${margen.toFixed(1)}%`;
            
            // Actualizar estado
            const estadoElement = document.getElementById('estadoPrecios');
            if (precioVenta < precioCompra) {
                estadoElement.textContent = '‚ö† Precio bajo';
                estadoElement.className = 'h6 fw-bold text-danger';
            } else if (margen > 50) {
                estadoElement.textContent = 'üí∞ Alto margen';
                estadoElement.className = 'h6 fw-bold text-success';
            } else {
                estadoElement.textContent = '‚úì Precios OK';
                estadoElement.className = 'h6 fw-bold text-success';
            }
        }

        // Event listeners para los campos de precio
        document.getElementById('PrecioCompra').addEventListener('input', calcularGanancia);
        document.getElementById('PrecioVenta').addEventListener('input', calcularGanancia);

        // Validaci√≥n personalizada
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('.needs-validation');
            
            form.addEventListener('submit', function(event) {
                const precioCompra = parseFloat(document.getElementById('PrecioCompra').value);
                const precioVenta = parseFloat(document.getElementById('PrecioVenta').value);
                
                if (precioVenta < precioCompra) {
                    event.preventDefault();
                    event.stopPropagation();
                    alert('‚ö† El precio de venta no puede ser menor al precio de compra.');
                    return;
                }
                
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                
                form.classList.add('was-validated');
            }, false);

            // Inicializar c√°lculo con valores actuales
            calcularGanancia();
        });

        // Manejo de error en imagen de vista previa
        document.addEventListener('DOMContentLoaded', function() {
            const img = document.querySelector('img');
            if (img) {
                img.addEventListener('error', function() {
                    const parent = this.closest('.bg-light');
                    if (parent) {
                        parent.innerHTML = `
                            <div class="text-center text-muted py-4">
                                <i class="bi bi-image fs-1 d-block mb-2"></i>
                                <small>Imagen no disponible</small>
                            </div>
                        `;
                    }
                });
            }
        });
    </script>
}