@model Cliente

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="container-fluid px-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-2 text-gray-800 fw-bold">
                <i class="bi bi-info-circle me-2 text-info"></i>Detalles del Cliente
            </h1>
            <p class="text-muted">Información completa del cliente</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-arrow-left me-2"></i>Volver a la Lista
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8">
            <!-- Tarjeta Principal -->
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-info bg-gradient text-white py-4 rounded-top-3">
                    <h5 class="card-title mb-0 fw-semibold text-center">
                        <i class="bi bi-person-badge me-2"></i>Información del Cliente
                    </h5>
                </div>
                
                <div class="card-body p-4 p-md-5">
                    <!-- Información Básica -->
                    <div class="row mb-4">
                        <div class="col-sm-6 mb-3">
                            <label class="form-label fw-semibold text-muted small mb-1">
                                <i class="bi bi-tag me-1"></i>Número de Cliente
                            </label>
                            <div class="bg-primary bg-opacity-10 rounded-2 p-3">
                                <span class="fw-bold text-primary fs-5">@Model.NumeroCliente</span>
                            </div>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <label class="form-label fw-semibold text-muted small mb-1">
                                <i class="bi bi-calendar me-1"></i>Fecha de Registro
                            </label>
                            <div class="bg-secondary bg-opacity-10 rounded-2 p-3">
                                <span class="fw-medium text-dark">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</span>
                            </div>
                        </div>
                    </div>

                    <!-- Nombre del Cliente -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold text-muted small mb-2">
                            <i class="bi bi-person me-1"></i>Nombre Completo
                        </label>
                        <div class="bg-light rounded-2 p-3 border">
                            <h4 class="fw-bold text-dark mb-0">@Model.Nombre</h4>
                        </div>
                    </div>

                    <!-- Teléfono -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold text-muted small mb-2">
                            <i class="bi bi-telephone me-1"></i>Información de Contacto
                        </label>
                        <div class="bg-success bg-opacity-10 rounded-2 p-3 text-center">
                            @if (!string.IsNullOrEmpty(Model.Telefono))
                            {
                                <span class="fw-bold text-success fs-4">@Model.Telefono</span>
                                <div class="small text-muted mt-1">Teléfono de contacto</div>
                            }
                            else
                            {
                                <span class="fw-medium text-muted">Sin información de contacto</span>
                            }
                        </div>
                    </div>

                    <!-- Información del Sistema -->
                    <div class="alert alert-secondary bg-opacity-10 border-0 rounded-3">
                        <div class="small">
                            <i class="bi bi-gear me-2"></i>
                            <strong>Información del sistema:</strong><br>
                            <span class="text-muted">ID del cliente: <strong>@Model.Id</strong></span>
                        </div>
                    </div>
                </div>

                <!-- Footer con Acciones -->
                <div class="card-footer bg-white py-4 border-top">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <small class="text-muted">
                                <i class="bi bi-clock-history me-1"></i>
                                Última actualización: <strong>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</strong>
                            </small>
                        </div>
                        <div class="d-flex gap-3">
                            <a asp-action="Edit" asp-route-id="@Model.Id" 
                               class="btn btn-warning btn-lg fw-semibold px-4">
                                <i class="bi bi-pencil-square me-2"></i>Editar
                            </a>
                            <a asp-action="Index" 
                               class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-list-ul me-2"></i>Volver a la Lista
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            backdrop-filter: blur(10px);
        }
        
        .bg-opacity-10 {
            background-color: rgba(var(--bs-primary-rgb), 0.1) !important;
        }
        
        .fs-5 {
            font-size: 1.25rem !important;
        }
        
        .btn-warning {
            background: linear-gradient(135deg, #ffc107, #fd7e14);
            border: none;
            color: white;
        }
    </style>
}